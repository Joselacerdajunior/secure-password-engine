RUN psql -h localhost -v ON_ERROR_STOP=1 -U postgres 
RUN CREATE USER postgres IF NOT EXISTS
RUN CREATE DATABASE metabase
RUN GRANT ALL PRIVILEGES ON DATABASE metabase TO postgres